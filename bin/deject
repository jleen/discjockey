#!/usr/bin/env zsh

[[ -f ~/.dj ]] && . ~/.dj

if [[ `uname` == Darwin ]]; then
    EJECT=${DJ_EJECT:-"/usr/bin/drutil eject"}
elif [[ `uname` = CYGWIN_NT* ]]; then
    EJECT=${DJ_EJECT:-"cdrecord -eject > /dev/null 2>&1"}
else
    CDROM=${DJ_CDROM:-/dev/cdrom}
    EJECT=${DJ_EJECT:-"eject $CDROM"}
fi

eval $EJECT
