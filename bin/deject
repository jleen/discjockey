#!/usr/bin/env zsh

[[ -f ~/.dj ]] && . ~/.dj

if [[ -z $DJ_EJECT ]]; then
    if [[ `uname` == Darwin ]]; then
        EJECT=(/usr/bin/drutil eject)
    elif [[ `uname` = CYGWIN_NT* ]]; then
        EJECT=(cdrecord -eject '>' /dev/null '2>&1')
    else
        CDROM=${DJ_CDROM:-/dev/cdrom}
        EJECT=(eject $CDROM)
    fi
fi

$EJECT
